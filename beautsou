import requests
from bs4 import BeautifulSoup
# from mark1 import track_names

def fetchandsave(url, path):
    r = requests.get(url)
    with open (path, 'w') as f:
        f.write(r.text)

url = ""

fetchandsave(url, "fetched_data/flac_mp.html")

with open ('fetched_data/flac_mp.html', 'r') as file:
    html_doc = file.read()

soup = BeautifulSoup(html_doc, 'html.parser')

# srch = soup.find('container',{'class':'input-group'})

srch_inp = soup.find('input', {'id': 'query'})

# keywords = "maps maroon5"

# srch_inp['value']= keywords

post_data = {
    
    srch_inp['id']: 'maps maroon5'
    
    }

response = requests.post(url, data=post_data)


with open('fetched_data/result.html', 'w') as file:
    file.write(response.text)


print(response.status_code)






