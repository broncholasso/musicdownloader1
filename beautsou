import requests
from bs4 import BeautifulSoup

# URL of the web page
url = 'https://new.myfreemp3juices.cc'

# Perform an initial GET request to get the page content
response = requests.get(url)

# Check if the request was successful
if response.status_code == 200:
    # Parse the HTML content of the page
    soup = BeautifulSoup(response.text, 'html.parser')

    # Find the search bar input element
    search_bar = soup.find('input', {'id': 'query'})

    # Check if the search bar was found
    if search_bar:
        # Define your search query
        search_query = 'Your search query here'

        # Set the search bar value
        search_bar['value'] = search_query

        # Submit the form (assuming it's a form-based search)
        form = search_bar.find_parent('form')
        if form:
            response = requests.post(url, data=form.serialize())

            # Check if the search request was successful
            if response.status_code == 200:
                # Now you can parse the search results and extract the information you need
                # You'll need to inspect the HTML of the search results to extract relevant data
                search_results = BeautifulSoup(response.text, 'html.parser')
                # Process search results as needed
            else:
                print('Failed to submit the search request.')
        else:
            print('No search form found on the page.')
    else:
        print('Search bar not found on the page.')
else:
    print('Failed to access the web page.')


